#15
flores = ["rosas", "orqu√≠dea", "lirio", "tulipan", "margarita", "dalia", "hortensia"]

tres_elementos_desde_tercero=flores[2:5]
print("tres elementos desde el tercero: ", tres_elementos_desde_tercero)

elementos_posiciones_pares=flores[1::2]
print("elementos en posiciones pares desde la segunda posicion: ", elementos_posiciones_pares)

elementos_cada_tres=flores[::3]
print("elementos desde la primera posicions saltando de a tres elementos: ", elementos_cada_tres)

 

             


